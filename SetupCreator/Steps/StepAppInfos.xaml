<UserControl x:Class="SetupCreator.StepAppInfos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SetupCreator"
             mc:Ignorable="d" BorderBrush="White" BorderThickness="1">
    
    <Grid>
        <StackPanel Orientation="Vertical">

            <GroupBox Header="Nom de l'application" FontWeight="Bold" FontSize="16" Margin="0,5,0,0" Foreground="White">
                <TextBox x:Name="TB_AppName" HorizontalContentAlignment="Center" FontWeight="Normal" Margin="5"/>
            </GroupBox>

            <GroupBox Header="Version de l'application" FontWeight="Bold" FontSize="16" Margin="0,10,0,0" Foreground="White">
                <TextBox x:Name="TB_AppVersion" Text="1.0.0.0" HorizontalContentAlignment="Center" FontWeight="Normal" Margin="5"/>
            </GroupBox>

            <GroupBox Header="Nom de votre organisation" FontWeight="Bold" FontSize="16" Margin="0,10,0,0" Foreground="White">
                <TextBox x:Name="TB_CompanyName" HorizontalContentAlignment="Center" FontWeight="Normal" Margin="5"/>
            </GroupBox>
            
        </StackPanel>
    </Grid>
</UserControl>
